    function DatosActualizar() {
        let data = {
            id: $('#Id').val(),
            Name: $('#Name').val(),
            Lastname: $('#Lastname').val(),
            email: $('#email').val(),
            number: $('#number').val(),
            ask: $('#ask').val(),
            Tipo: $('#Tipo').val(),
            Cedula: $('#Cedula').val(),
            orden: $('#orden').val()
        };
        if (data.Name == "") {
            Swal.fire({
                icon: 'error',
                text: 'Debe escribir los nombres'
            })
            event.preventDefault();
            return false;
        }
        if (data.Lastname == "") {
            Swal.fire({
                icon: 'error',
                text: 'Debe escribir los apellidos'
            })
            event.preventDefault();
            return false;
        }
        if (data.email == "") {
            Swal.fire({
                icon: 'error',
                text: 'Debe escribir el correo electrónico'
            })
            event.preventDefault();
            return false;
        }
        if (data.number == "") {
            Swal.fire({
                icon: 'error',
                text: 'Debe escribir su número de celular'
            })
            event.preventDefault();
            return false;
        }
        if (data.number.length = !10) {
            Swal.fire({
                icon: 'error',
                text: 'Número de celular inválido'
            })
            event.preventDefault();
            return false;
        }
        if (data.ask == "0") {
            Swal.fire({
                icon: 'error',
                text: 'Debe responder si el tipo de documento es el mismo o no'
            })
            event.preventDefault();
            return false;
        }
        if (data.ask == "2" & data.Tipo == "0") {
            Swal.fire({
                icon: 'error',
                text: 'Debe seleccionar el tipo de documento'
            })
            event.preventDefault();
            return false;
        }
        if (data.Cedula == "") {
            Swal.fire({
                icon: 'error',
                text: 'Debe escribir su número de documento'
            })
            event.preventDefault();
            return false;
        }
        if (data.orden == "") {
            Swal.fire({
                icon: 'error',
                text: 'Debe escribir el número de la orden médica'
            })
            event.preventDefault();
            return false;
        }
        return data;
    }

    function ActualizarDatos(data) {
