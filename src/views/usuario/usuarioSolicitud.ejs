    function Eliminar(id) {
        $.ajax({
            type: 'post',
            cache: false,
            dataType: "json",
            url: '/DatosUsuario',
            data: { idC: id }, //Se pasa el $id
            success: function (datos) {
                console.log('NOJODA');
                console.log(datos)
                document.getElementById('Id').value = datos[0].idcitas;
                document.getElementById('email').value = datos[0].Correo;
                document.getElementById('Name').value = datos[0].Nombres;
                document.getElementById('Lastname').value = datos[0].Apellidos;
                document.getElementById('TipoCita').value = datos[0].Solicitud;
                document.getElementById('opciones').value = datos[0].Especialidad;
                document.getElementById('Doctores').value = datos[0].Doctor;
                document.getElementById('Lab').value = datos[0].Examen;
                var Mes;
                if (datos[0].Mes == "January") {
                    Mes = "Enero"
                } else if (datos[0].Mes == "February") {
                    Mes = "Febrero"
                } else if (datos[0].Mes == "March") {
                    Mes = "Marzo"
                } else if (datos[0].Mes == "April") {
                    Mes = "Abril"
                } else if (datos[0].Mes == "May") {
                    Mes = "Mayo"
                } else if (datos[0].Mes == "June") {
                    Mes = "Junio"
                } else if (datos[0].Mes == "July") {
                    Mes = "Julio"
                } else if (datos[0].Mes == "August") {
                    Mes = "Agosto"
                } else if (datos[0].Mes == "September") {
                    Mes = "Septiembre"
                } else if (datos[0].Mes == "October") {
                    Mes = "Octubre"
                } else if (datos[0].Mes == "November") {
                    Mes = "Noviembre"
                } else if (datos[0].Mes == "December") {
                    Mes = "Diciembre"
                }
                document.getElementById('mes').value = Mes;
                document.getElementById('dia').value = datos[0].Dia;
                document.getElementById('año').value = datos[0].Año;
                document.getElementById('hora').value = datos[0].Hora12;
                document.getElementById('estado').value = datos[0].Estado_cita;
                $("#EliminarModal").modal("toggle");
            }
        });
    }

    $('#btnEliminar').click(function () {
        let data = Datos();
        console.log(data)
        if (!data) {
            console.log('error')
        } else {
            eliminarCita(data);
        }
    })
    function Datos() {
        let data = {
            id: $('#Id').val(),
            correo: $('#email').val(),
            nombre: $('#Name').val(),
            apellido: $('#Lastname').val(),
            tipocita: $('#TipoCita').val(),
            especialidad: $('#opciones').val(),
            doctor: $('#Doctores').val(),
            examen: $('#Lab').val(),
            fechaMes: $('#mes').val(),
            fechaDia: $('#dia').val(),
            fechaYear: $('#año').val(),
            hora: $('#hora').val(),
            estado: $('#estado').val()
        };
        return data
    }
    function eliminarCita(data) {
        $.ajax({
            type: 'POST',
            url: '/EliminarSolicitud',
            data: data,
            success: function (msg) {
                Swal.fire(
                    '¡Buen trabajo!',
                    '¡Se ha cancelado la cita médica correctamente!',
                    'success'
                ).then(function () {
                    window.location = "/ConsultarUser";
                });
            },
            error: function (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Hubo un error, no se pudo cancelar la cita'
                })
            }
        });
    }

    function Actualizar(id) {
        console.log(id)
        $.ajax({
            type: 'post',
            cache: false,
            dataType: "json",
            url: '/DatosUsuarioA',
            data: { idC: id }, //Se pasa el $id
            success: function (datos) {

                console.log('Actualizar')
                document.getElementById('Id').value = datos[0].idcitas;
                document.getElementById('Name').value = datos[0].Nombres;
                document.getElementById('Lastname').value = datos[0].Apellidos;
                document.getElementById('email').value = datos[0].Correo;
                document.getElementById('number').value = datos[0].Celular;
                document.getElementById('Cedula').value = datos[0].Numero_Documento;
                document.getElementById('orden').value = datos[0].Orden;

                $("#ActualizarModal").modal("toggle");
            }
        });
    }

    $(document).ready(function () {
        $('#ask').on('change', function () {
            if (this.value == '1') {
                $("#doc").hide();
            }
            else if (this.value == '2') {
