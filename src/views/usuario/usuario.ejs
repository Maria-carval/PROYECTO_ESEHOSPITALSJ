    async function eps() {
        var variable = document.getElementById('entidad').value;
        const consulta = {
            con: variable
        };
        const options = {
            method: "POST",
            body: JSON.stringify(consulta),
            headers: {
                "Content-Type": "application/json"
            }
        };
        const response = await fetch('/listaEPS', options);
        datos = await response.json();
        select = document.getElementById('entidad');
        for (var i = 0; i < datos.length; i++) {
            var opt = document.createElement('option');
            opt.value = datos[i].EPS;
            opt.innerHTML = datos[i].EPS;
            select.add(opt);
        }
    }

    function limpiarAfiliacion() {
