<body>
    <div class="modal-dialog text-center">
        <div class="col-sm-12 main-section">
            <div class="modal-content">
                <div>
                    <% if(errors !==" " ) {%>
                        <% errors.forEach(function(item) { %>
                            <div class="alert alert-danger">
                                <%- item %>
                            </div>
                            <%})%>
                                <%}%>
                </div>
                <form class="col-12">
                    <hr class="my-4">
                    <h6 style="margin-bottom: 20px; margin-left: 0px;">A continuación podrá registrarse en la plataforma</h6>
                    <hr class="my-4">
                    <div class="form-group" id="name-group">
                        <input type="text" class="form-control" id="name" name="name" placeholder="Escriba su nombre">
                    </div>
                    <div class="form-group" id="name-group">
                        <input type="text" class="form-control" id="lastname" name="lastname"
                            placeholder="Escriba su apellido">
                    </div>
                    <div class="form-group" id="phone-group">
                        <input type="number" class="form-control" id="phone" name="phone"
                        placeholder="Escriba su número de celular">
                    </div>
                    <div class="form-group" id="email-group">
                        <input type="email" class="form-control" id="email" name="email"
                        placeholder="Escriba su correo electrónico">
                    </div>
                    <div class="form-group" id="password-group">
                        <input type="password" class="form-control" id="password" name="password"
                        placeholder="Escriba su contraseña">
                    </div>
                    <div class="form-group" id="password-group">
                        <input type="password" class="form-control" id="password2" name="password2"
                        placeholder="Confirme la contraseña">
                    </div>
                    <button type="submit" class="btn btn-success" id="btn"><i class="fas fa-sign-in-alt"></i>
                        REGISTRARSE</button>
                </form>
                <hr class="my-4">
                <div class="text-center mb-2" id="register">
                    ¿Ya tiene una cuenta?
                    <a href="/Inicio" class="register-link register">
                        Inicie sesión aquí.
                    </a>
                </div>
            </div>
        </div>
    </div>    
</body>
