    <script>
        $('#btn').click(function () {
            let data = recuperarDatosFormulario();
            console.log(data);
            // agregarRegistro(data);
            if (!data) {
                console.log('error')
            } else {
                agregarRegistro(data);
            }
        })

        function recuperarDatosFormulario() {
            let data = {
                name: $('#name').val(),
                lastname: $('#lastname').val(),
                phone: $('#phone').val(),
                email: $('#email').val(),
                password: $('#password').val(),
                password2: $('#password2').val()
            };
            if (data.name == '') {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Debe ingresar sus nombres'
                });
                event.preventDefault();
                return false;
            }
            if (data.lastname == '') {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Debe ingresar sus apellidos'
                });
                event.preventDefault();
                return false;
            }
            if (data.phone == '') {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Debe ingresar su número de teléfono'
                });
                event.preventDefault();
                return false;
            }
            if (data.phone.length < 10 || data.phone.length > 10) {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Debe ingresar un número de teléfono válido'
                });
                event.preventDefault();
                return false;
            }
            if (data.email == '') {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Debe ingresar su correo electrónico'
                });
                event.preventDefault();
                return false;
            }
            if (data.password == '') {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Debe ingresar la contraseña'
                });
                event.preventDefault();
                return false;
            }
            if (data.password !== data.password2) {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Las contraseñas no coinciden'
                });
                event.preventDefault();
                return false;
            }
            return data;
        }
        function agregarRegistro(data) {
            $.ajax({
                type: 'POST',
                url: '/registro',
                data: data,
                success: function (msg) {
                    Swal.fire(
                        '¡Buen trabajo!',
                        '¡Te has registrado correctamente!',
                        'success'
                    )
                    .then(function () {
                        window.location = "/";
                    });
                },
                error: function (error) {
                    console.log('No se pudo registrar')
                    // Swal.fire({
                    //     icon: 'error',
                    //     title: 'Oops...',
                    //     text: 'Hubo un error'
                    // })
                }
            });
        }
    </script>


